<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_Layout</title>
</head>
<body>
    <div class="pagina">
        @RenderSection("cabecalho")
        @RenderPage("~/Views/Shared/_Menu.cshtml")
    </div>
    <div id="principal">
        @RenderBody()
        @Html.Partial("_Promocao")
    </div>

    <div>
        @if (IsSectionDefined("rodape"))
        {
            @RenderSection("rodape")
        }
        else
        {
            @RenderPage("~/Views/Shared/_RodapePadrao.cshtml")
        }
    </div>

</body>
</html>
